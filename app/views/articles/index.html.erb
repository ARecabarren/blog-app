


<div class="d-flex flex-column flex-md-row p-4 gap-4 py-md-5 align-items-center justify-content-center">
    <div class="list-group">
        <% @articles.each do |article|%>
                
                <a href="<%= article_path(article) %>" class="list-group-item list-group-item-action d-flex gap-3 py-3" aria-current="true">
                    <%= image_tag("https://github.com/twbs.png", class: "rounded-circle flex-shrink-0", width: "32", height: "32", alt: "twbs") %>
                <div class="d-flex gap-2 w-100 justify-content-between">
                        <div>
                        <h6 class="mb-0"><%= article.title %></h6>
                        <p class="mb-0 opacity-75"><%= article.body[0..19] %></p>
                        <%# <p class="mb-0 opacity-75">Some placeholder content in a paragraph.</p> %>
                        </div>
                        <small class="opacity-50 text-nowrap"><%= time_ago_in_words(article.created_at) %> ago</small>
                </div>
                </a>
        <% end %>
    </div>
</div>

<%= link_to "New Article", new_article_path %>
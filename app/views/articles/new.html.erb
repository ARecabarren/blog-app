<h1>New Article</h1>

<%= form_with model: @article do |form|%>
    <div>
        <%# Fields  %>
        <%= form.label :title %> <br>
        <%= form.text_field :title %>
        <%# Displaying Errors: %>
        <% @article.errors.full_messages_for(:title).each do |message|%>
            <div><%= message %></div>
        <% end %>
    </div>

    <div>
        <%# Fields %>
        <%= form.label :body %> <br>
        <%= form.text_area :body %>
        <%# Displaying Errors: %>
        <% @article.errors.full_messages_for(:body).each do |message|%>
            <div><%= message %></div>
        <% end %>
    </div>

    <div>
        <%= form.submit %>
    </div>
<% end %>